<div class="container">
    <h2>Add User</h2>
    <form action="/users/create" method="post">
        <div class="form-group row">
            <label for="name" class="col-md-2 col-form-label text-md-right">Name</label>
            <div class="col-md-4">
                <input type="text" id="name" class="form-control" name="name" required autofocus>
            </div>
        </div>
        <div class="form-group row">
            <label for="occupation" class="col-md-2 col-form-label text-md-right">Occupation</label>
            <div class="col-md-4">
                <input type="text" id="occupation" class="form-control" name="occupation" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6 offset-md-4">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="newsletter">Newsletter?
                    </label>
                </div>
            </div>
        </div>
        <div class="col-md-6 offset-md-4">
            <button type="submit" class="btn btn-primary pull-right">
                Add
            </button>
        </div>
    </form>
</div>